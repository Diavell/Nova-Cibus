<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/backgraundcolor2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageButton
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domates"
        android:textSize="50sp"
        android:textColor="@color/green"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <ImageSwitcher
        android:id="@+id/urun1Image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/bt_previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_navigate_before_24"
            android:background="@color/backgraundcolor2"
            android:layout_marginRight="20dp"/>

        <ImageButton
            android:id="@+id/bt_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:background="@color/backgraundcolor2"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/urun9sepet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Sepete At"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        android:text="Patlıcangiller ailesinin en faydalı üyesi olan domates içerisinde
demir, potasyum, kalsiyum, fosfor mineralleri ve A,B,C
vitaminlerini bulunduran oldukça faydalı bir besindir"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>